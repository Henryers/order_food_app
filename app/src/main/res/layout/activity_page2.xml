<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#0099ff"
        android:text="@string/p2"
        android:textColor="#ffffff"
        android:textSize="25sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:background="@color/grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/lightbluebg"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:textSize="30sp"
                android:text="畅销店铺列表"
                android:textColor="@color/blue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/lightbluebg"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="200dp"
                android:textSize="20sp"
                android:textStyle="italic"
                android:text="你想吃的都在这里！"
                android:textColor="@color/purple"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/png1"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/p2_chicken"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="20dp"
                    android:text="杨氏炸鸡"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/png2"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/p2_noodles"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:text="东北面馆"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/png3"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/p2_Italian"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:text="F33意式餐厅"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/png4"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/p2_bigstall"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:text="福家大排档"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/png5"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/p2_midfood"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:text="凌家中餐"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/png6"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/p2_pizza"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:text="披萨小屋"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/png7"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/p2_northwest"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:text="何牌西北菜"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/png8"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/p2_juicetea"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:text="故式果茶"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/png9"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/p2_japanfood"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="20dp"
                    android:text="左町日料"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/below_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="首页"
            android:textAlignment="center"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/below_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:background="#0099ff"
            android:text="点菜"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/below_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="购物车"
            android:textAlignment="center"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/below_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="我的"
            android:textAlignment="center"
            android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>